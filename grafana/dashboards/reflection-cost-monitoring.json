{
  "dashboard": {
    "id": null,
    "uid": "vritti-reflection-costs",
    "title": "Vritti - Reflection Cost & LLM Monitoring",
    "description": "LLM cost tracking, tier distribution, and budget monitoring for reflection generation",
    "tags": ["vritti", "reflection", "costs", "llm", "budget"],
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m"]
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Daily Cost (USD)",
        "description": "Current day LLM spending",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "episodic_memory_daily_cost_usd",
            "legendFormat": "Daily Cost",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "type": "gauge",
        "title": "Budget Used (%)",
        "description": "Percentage of $50 daily budget consumed",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "(episodic_memory_daily_cost_usd / 50) * 100",
            "legendFormat": "Budget Used",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 20, "color": "#73BF69"},
                {"value": 50, "color": "yellow"},
                {"value": 80, "color": "orange"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Total Reflections (24h)",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(episodic_memory_reflections_generated_total[24h]))",
            "legendFormat": "Reflections",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Premium Tier Usage",
        "description": "Percentage of reflections using premium tier (target: <15%)",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "episodic_memory_premium_tier_usage_percentage",
            "legendFormat": "Premium %",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 15, "color": "yellow"},
                {"value": 30, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "type": "timeseries",
        "title": "Cost Over Time (by Tier)",
        "description": "Cumulative cost breakdown by reflection tier",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (tier) (increase(episodic_memory_reflection_cost_by_tier_usd_total[1h]))",
            "legendFormat": "{{tier}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right", "calcs": ["sum"]}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 30,
              "stacking": {"mode": "normal"}
            }
          }
        }
      },
      {
        "id": 6,
        "type": "piechart",
        "title": "Reflections by Tier (24h)",
        "description": "Distribution of reflections across cheap/cached/premium tiers",
        "gridPos": {"x": 12, "y": 4, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "sum by (tier) (increase(episodic_memory_reflections_by_tier_total[24h]))",
            "legendFormat": "{{tier}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right"},
          "pieType": "pie",
          "displayLabels": ["percent", "value"]
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "cheap"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "green"}}]
            },
            {
              "matcher": {"id": "byName", "options": "cached"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "blue"}}]
            },
            {
              "matcher": {"id": "byName", "options": "premium"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "purple"}}]
            }
          ]
        }
      },
      {
        "id": 7,
        "type": "stat",
        "title": "Cost Savings",
        "description": "Estimated savings vs all-premium baseline",
        "gridPos": {"x": 18, "y": 4, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "episodic_memory_reflection_cost_savings_usd",
            "legendFormat": "Savings",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "yellow"},
                {"value": 10, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "type": "stat",
        "title": "Active Reflections",
        "description": "Currently in-progress reflection generations",
        "gridPos": {"x": 18, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "episodic_memory_reflection_generations_active",
            "legendFormat": "Active",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "type": "timeseries",
        "title": "Reflection Generation Latency (P95/P99)",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(episodic_memory_reflection_generation_duration_seconds_bucket[5m]))",
            "legendFormat": "P95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(episodic_memory_reflection_generation_duration_seconds_bucket[5m]))",
            "legendFormat": "P99",
            "refId": "B"
          }
        ],
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 10,
        "type": "bargauge",
        "title": "Quality Score by Tier",
        "description": "Average confidence score per tier",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.5, sum by (tier, le) (rate(episodic_memory_reflection_tier_quality_score_bucket[1h])))",
            "legendFormat": "{{tier}} (median)",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.6, "color": "yellow"},
                {"value": 0.8, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "type": "timeseries",
        "title": "LLM Provider Success Rate",
        "description": "Success rate by LLM model",
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (model_name) (rate(episodic_memory_llm_call_total{success=\"true\"}[5m])) / sum by (model_name) (rate(episodic_memory_llm_call_total[5m]))",
            "legendFormat": "{{model_name}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.9, "color": "yellow"},
                {"value": 0.99, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "type": "table",
        "title": "Quality Fallbacks (24h)",
        "description": "Cheap tier fallbacks to premium due to quality issues",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (reason) (increase(episodic_memory_tier_quality_fallback_total[24h]))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {
                "reason": "Fallback Reason",
                "Value": "Count (24h)"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left"
            }
          }
        }
      },
      {
        "id": 13,
        "type": "timeseries",
        "title": "Reflection Failures",
        "description": "Failure rate by reason",
        "gridPos": {"x": 0, "y": 28, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "sum by (reason) (rate(episodic_memory_reflection_failure_total[5m]))",
            "legendFormat": "{{reason}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "bars"
            }
          }
        }
      },
      {
        "id": 14,
        "type": "stat",
        "title": "Dead Letter Queue",
        "description": "Failed reflections awaiting recovery",
        "gridPos": {"x": 12, "y": 28, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "sum(increase(episodic_memory_reflection_dead_letter_total[24h]))",
            "legendFormat": "DLQ Count",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 15,
        "type": "stat",
        "title": "Persistence Retry Rate",
        "description": "Reflection persistence retry attempts",
        "gridPos": {"x": 18, "y": 28, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "sum(rate(episodic_memory_reflection_persistence_retry_total[5m]))",
            "legendFormat": "Retries/s",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 1, "color": "red"}
              ]
            }
          }
        }
      }
    ]
  }
}
