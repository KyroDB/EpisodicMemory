{
  "dashboard": {
    "title": "EpisodicMemory - Business Metrics",
    "description": "Business KPIs and customer usage tracking",
    "tags": ["episodic-memory", "business", "customers"],
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 1,
    "refresh": "1m",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Total Episodes Ingested (24h)",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(episodic_memory_episodes_ingested_total[24h]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Total Searches (24h)",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(episodic_memory_searches_total[24h]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Total Credits Used (24h)",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(episodic_memory_credits_used_total[24h]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0
          }
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Active Customers (24h)",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "count(count by (customer_id) (increase(episodic_memory_credits_used_total[24h])))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value"
        }
      },
      {
        "id": 5,
        "type": "timeseries",
        "title": "Episode Ingestion Rate",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(episodic_memory_episodes_ingested_total[5m]))",
            "legendFormat": "Total Ingestion Rate",
            "refId": "A"
          },
          {
            "expr": "sum by (customer_tier) (rate(episodic_memory_episodes_ingested_total[5m]))",
            "legendFormat": "{{customer_tier}}",
            "refId": "B"
          }
        ],
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "eps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 6,
        "type": "timeseries",
        "title": "Search Request Rate",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(episodic_memory_searches_total[5m]))",
            "legendFormat": "Total Search Rate",
            "refId": "A"
          },
          {
            "expr": "sum by (customer_tier) (rate(episodic_memory_searches_total[5m]))",
            "legendFormat": "{{customer_tier}}",
            "refId": "B"
          }
        ],
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 7,
        "type": "piechart",
        "title": "Episodes by Customer Tier",
        "gridPos": {"x": 0, "y": 12, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "sum by (customer_tier) (increase(episodic_memory_episodes_ingested_total[24h]))",
            "legendFormat": "{{customer_tier}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right"},
          "pieType": "pie",
          "displayLabels": ["percent"]
        }
      },
      {
        "id": 8,
        "type": "piechart",
        "title": "Episodes with Images vs Text-Only",
        "gridPos": {"x": 8, "y": 12, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "sum by (has_image) (increase(episodic_memory_episodes_ingested_total[24h]))",
            "legendFormat": "Images: {{has_image}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right"},
          "pieType": "pie",
          "displayLabels": ["percent"]
        }
      },
      {
        "id": 9,
        "type": "piechart",
        "title": "Episodes with Reflection",
        "gridPos": {"x": 16, "y": 12, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "sum by (has_reflection) (increase(episodic_memory_episodes_ingested_total[24h]))",
            "legendFormat": "Reflection: {{has_reflection}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right"},
          "pieType": "pie",
          "displayLabels": ["percent"]
        }
      },
      {
        "id": 10,
        "type": "table",
        "title": "Top 10 Customers by Credit Usage",
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "topk(10, sum by (customer_id, customer_tier) (increase(episodic_memory_credits_used_total[24h])))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {
                "customer_id": "Customer ID",
                "customer_tier": "Tier",
                "Value": "Credits Used (24h)"
              }
            }
          }
        ]
      },
      {
        "id": 11,
        "type": "bargauge",
        "title": "Customer Quota Usage",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "topk(10, episodic_memory_customer_quota_usage_ratio)",
            "legendFormat": "{{customer_id}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.8, "color": "yellow"},
                {"value": 1.0, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "type": "timeseries",
        "title": "Credits Used Over Time",
        "gridPos": {"x": 0, "y": 28, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(episodic_memory_credits_used_total[5m])) * 300",
            "legendFormat": "Total Credits/5min",
            "refId": "A"
          },
          {
            "expr": "sum by (operation) (rate(episodic_memory_credits_used_total[5m])) * 300",
            "legendFormat": "{{operation}}",
            "refId": "B"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10,
              "stacking": {"mode": "normal"}
            }
          }
        }
      },
      {
        "id": 13,
        "type": "heatmap",
        "title": "Search Results Distribution",
        "gridPos": {"x": 0, "y": 36, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(episodic_memory_search_results_returned_bucket[5m])) by (le)",
            "format": "heatmap",
            "legendFormat": "{{le}}",
            "refId": "A"
          }
        ],
        "options": {
          "calculate": true,
          "calculation": {"yBuckets": {"mode": "size", "value": "10"}}
        }
      }
    ]
  }
}
