{
  "dashboard": {
    "title": "EpisodicMemory - Service Health Overview",
    "description": "Real-time service health monitoring with SLO tracking",
    "tags": ["episodic-memory", "health", "slo"],
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m"]
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Service Status",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "up{job=\"episodic-memory\"}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "1", "text": "UP"},
              {"type": "value", "value": "0", "text": "DOWN"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Uptime",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "time() - process_start_time_seconds{job=\"episodic-memory\"}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "unit": "s"
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Request Rate (QPS)",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(episodic_memory_http_requests_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "unit": "reqps"
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Error Rate",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(episodic_memory_http_requests_total{status_code=~\"5..\"}[5m])) / sum(rate(episodic_memory_http_requests_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "unit": "percentunit"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.01, "color": "yellow"},
                {"value": 0.05, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "type": "timeseries",
        "title": "P99 Latency (SLO: <50ms)",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(episodic_memory_http_request_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "P99 Latency",
            "refId": "A"
          },
          {
            "expr": "50",
            "legendFormat": "SLO Target (50ms)",
            "refId": "B"
          }
        ],
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "SLO Target (50ms)"},
              "properties": [
                {"id": "custom.lineStyle", "value": {"dash": [10, 10]}},
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}
              ]
            }
          ]
        }
      },
      {
        "id": 6,
        "type": "timeseries",
        "title": "Request Rate by Endpoint",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (endpoint) (rate(episodic_memory_http_requests_total[5m]))",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 7,
        "type": "gauge",
        "title": "KyroDB Text Instance Health",
        "gridPos": {"x": 0, "y": 12, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "episodic_memory_kyrodb_connection_healthy{instance=\"text\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            },
            "mappings": [
              {"type": "value", "value": "1", "text": "HEALTHY"},
              {"type": "value", "value": "0", "text": "UNHEALTHY"}
            ]
          }
        }
      },
      {
        "id": 8,
        "type": "gauge",
        "title": "KyroDB Image Instance Health",
        "gridPos": {"x": 6, "y": 12, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "episodic_memory_kyrodb_connection_healthy{instance=\"image\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            },
            "mappings": [
              {"type": "value", "value": "1", "text": "HEALTHY"},
              {"type": "value", "value": "0", "text": "UNHEALTHY"}
            ]
          }
        }
      },
      {
        "id": 9,
        "type": "timeseries",
        "title": "API Key Cache Hit Rate",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "rate(episodic_memory_api_key_cache_hits_total[5m]) / (rate(episodic_memory_api_key_cache_hits_total[5m]) + rate(episodic_memory_api_key_cache_misses_total[5m]))",
            "legendFormat": "Cache Hit Rate",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.8, "color": "yellow"},
                {"value": 0.95, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "type": "table",
        "title": "Error Summary",
        "gridPos": {"x": 0, "y": 18, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "topk(10, sum by (error_type, endpoint) (rate(episodic_memory_errors_total[5m])))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "indexByName": {},
              "renameByName": {
                "error_type": "Error Type",
                "endpoint": "Endpoint",
                "Value": "Rate (errors/s)"
              }
            }
          }
        ]
      },
      {
        "id": 11,
        "type": "timeseries",
        "title": "Active Connections",
        "gridPos": {"x": 12, "y": 18, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "sum(episodic_memory_http_requests_active)",
            "legendFormat": "Active Requests",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      }
    ]
  }
}
