# KyroDB Connection
KYRODB_TEXT_HOST=localhost
KYRODB_TEXT_PORT=50051
KYRODB_IMAGE_HOST=localhost
KYRODB_IMAGE_PORT=50052

# Service Configuration
EPISODIC_MEMORY_HOST=0.0.0.0
EPISODIC_MEMORY_PORT=8000
LOG_LEVEL=INFO

# LLM Configuration (for reflection generation)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000

# Embedding Models
TEXT_EMBEDDING_MODEL=all-MiniLM-L6-v2  # 384-dim
IMAGE_EMBEDDING_MODEL=openai/clip-vit-base-patch32  # 512-dim

# Celery (Background Jobs)
REDIS_HOST=localhost
REDIS_PORT=6379
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Hygiene Policies
DECAY_CHECK_INTERVAL_HOURS=168  # Weekly
ARCHIVE_AGE_DAYS=180  # 6 months
DELETE_UNUSED_AGE_DAYS=90  # 3 months
MIN_RETRIEVAL_COUNT_TO_KEEP=1

# Search Configuration
DEFAULT_SEARCH_K=20
MAX_SEARCH_K=100
PRECONDITION_THRESHOLD=0.5
SIMILARITY_THRESHOLD=0.6

# Storage Paths
SCREENSHOT_STORAGE_PATH=./data/screenshots
ARCHIVE_STORAGE_PATH=./data/archive
